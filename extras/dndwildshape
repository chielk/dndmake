_wildshape()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="-h --help -v --version -d --hd-cap -l --list -x --ex -a --animals -f"\
         "--output-file -c --character -o --order -s --size"
    races="`{ ls /etc/dndmake/races ; ls ~/.dndmake/races ; } | sed s/_/-/g | sed s/.py//g`"
    sizes="F D T S M L H G C"
    attributes="name size ac init str dex con int wis cha fort reflex will"\
               "melee grapple ranged land burrow swim climb fly land burrow"\
               "swim climb fly"

    opts="$opts $races $alignments"

    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
}
complete -F _dndmake dndmake
